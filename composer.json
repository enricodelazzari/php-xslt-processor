{
    "name": "maize-tech/php-xslt-processor",
    "description": "This is my package php-xslt-processor",
    "keywords": [
        "maize-tech",
        "php-xslt-processor"
    ],
    "homepage": "https://github.com/maize-tech/php-xslt-processor",
    "license": "MIT",
    "authors": [
        {
            "name": "Enrico De Lazzari",
            "email": "enrico.delazzari@h-farm.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-libxml" : "*",
        "ext-xsl" : "*",
        "ext-dom" : "*",
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Maize\\Processor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maize\\Processor\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
